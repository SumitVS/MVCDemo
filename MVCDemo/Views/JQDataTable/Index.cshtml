
@{
    ViewBag.Title = "Index";
}

<link type="text/css" rel="stylesheet" href="//cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css" />
<script type="text/javascript" src="//cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
<h2>Index</h2>
<script>
    $(document).ready(function () {

        $.ajax({
            type: "post",
            dataType: "json",
            url: "/JQDataTable/GetEmployee",
            data: {},
            success: function (data) {
                if (data.length > 0) {
                    var myTable = $("#datatable").DataTable({
                        data: data,
                        columns:
                        [
                                { "data": "Id" },
                                { "data": "FirstName" },
                                { "data": "LastName" },
                                { "data": "Gender" },
                                { "data": "JobTitle" },
                                {
                                    "data": "WebSite",
                                    "render": function (webSite) {
                                        return "<a href=" + webSite + ">" + webSite + "/>";
                                    }
                                },
                                {
                                    "data": "Salary",
                                    "render": function (salary) {
                                        return "₹" + salary;
                                    }
                                },
                                {
                                    "data": "HireDate",
                                    "render": function (jsonDate) {
                                        var date = new Date(parseInt(jsonDate.substr(6)));
                                        var month = date.getMonth() + 1;
                                        return month + "/" + date.getDate() + "/" + date.getFullYear();
                                    }
                                }
                            ]
                    });
                }
            },
            error: function (error) {
                console.log(error);
            }
        });
        
    });
</script>

<div style="width:1000px; border:1px solid black; padding:3px;">
    <table id="datatable">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Job Title</th>
                <th>Web Site</th>
                <th>Salary</th>
                <th>Hire Date</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
        <tfoot>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Job Title</th>
                <th>Web Site</th>
                <th>Salary</th>
                <th>Hire Date</th>
            </tr>
        </tfoot>
    </table>
</div>

